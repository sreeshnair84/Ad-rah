# OpenKiosk Environment Variables
# Copy this file to .env and modify as needed

# ==================================================
# LOCAL DEVELOPMENT SETTINGS
# ==================================================

# Use local event processor instead of Azure Service Bus
# Set to true for local development, false for production
USE_LOCAL_EVENT_PROCESSOR=true

# Local event processor queue size (only used when USE_LOCAL_EVENT_PROCESSOR=true)
EVENT_PROCESSOR_QUEUE_SIZE=100

# ==================================================
# DATABASE SETTINGS
# ==================================================

# MongoDB connection string (leave empty to use in-memory storage for local dev)
MONGO_URI=mongodb://localhost:27017

# ==================================================
# STORAGE SETTINGS
# ==================================================

# Local media storage directory
LOCAL_MEDIA_DIR=./data/media

# Azure Storage (for production)
AZURE_STORAGE_CONNECTION_STRING=UseDevelopmentStorage=true
AZURE_CONTAINER_NAME=openkiosk-media

# ==================================================
# AZURE SERVICES
# ==================================================

# Azure Service Bus (leave empty when using local processor)
SERVICE_BUS_CONNECTION_STRING=

# Azure AI Content Safety
AZURE_AI_ENDPOINT=
AZURE_AI_KEY=

# ==================================================
# SECURITY SETTINGS
# ==================================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secure-secret-key-here

# ==================================================
# DEVELOPMENT NOTES
# ==================================================
#
# LOCAL DEVELOPMENT (USE_LOCAL_EVENT_PROCESSOR=true):
# - Events processed using in-memory queues
# - AI moderation simulated with random results
# - No external Azure services required
# - Perfect for development and testing
#
# PRODUCTION (USE_LOCAL_EVENT_PROCESSOR=false):
# - Requires Azure Service Bus connection
# - Uses real AI content moderation
# - Requires Azure Storage and AI services
# - Install: pip install azure-servicebus azure-storage-blob azure-ai-contentsafety
